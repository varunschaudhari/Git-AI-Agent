{
    "manifest_version": 3,
    "name": "GitHub Issue Creator",
    "version": "1.0",
    "description": "A Chrome extension to create GitHub issues directly from a popup.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api.github.com/repos/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}